/* (Número primo) Utilize o crivo de eratóstenes para determinar os números primos de uma determinada entrada */


for($i = 1; $i <= 100; $i++){
	if($i != 1){
		if(($i > 2) and ($i % 2 == 0)){
			$par = $i;
		
		}elseif(($i > 3) and ($i % 3 == 0)){
			$multiplusTres = $i;
		
		}elseif(($i > 5) and ($i % 5 == 0)){
			$multiplusCinco = $i;
		
		}elseif(($i > 7) and ($i % 7 == 0)){
			$multiplusSete = $i;
		
		}else {
			echo $primo = $i . "<br />";
		}
	}
}
